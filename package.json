{
  "name": "cypress-ncatestify-plugin",
  "version": "2.1.60",
  "description": "NCA TESTIFY commands and tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "typecheck": "tsc --skipLibCheck --noEmit",
    "postbuild": "copyfiles -u 1 src/index.d.ts dist && rm -f jest.config.js",
    "build": "tsc --skipLibCheck",
    "lint": "eslint --ext=.js,.ts,.tsx",
    "release": "npm run build && npm version patch && node scripts/release.js && npm publish",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "npx prettier --write .",
    "format": "prettier --write \"**/*.{js,ts}\""
  },
  "keywords": [
    "cypress",
    "testing",
    "NCA",
    "TESTIFY"
  ],
  "author": "Roland Golla",
  "license": "ISC",
  "peerDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "axe-core": "^4.0.0",
    "chai": "^4.3.10",
    "cypress": "^14.0.0",
    "cypress-axe": "^1.5.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "copyfiles": "^2.4.1",
    "cypress": "^14.4.1",
    "eslint": "^9.17.0",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
