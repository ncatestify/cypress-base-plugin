{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/support/*": ["./cypress/support/*"],
      "@/pages/*": ["./cypress/pages/*"],
      "@/utils/*": ["./src/utils/*"]
    },
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": ["esnext", "dom"],
    "types": ["cypress", "node"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "./src"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false
  },
  "include": ["src/**/*.ts", "cypress/**/*.ts"]
}